<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"

    android:background="#ffffff"

    android:backgroundTint="@color/ambient_mode_text">

    <LinearLayout
        android:id="@+id/layout_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:showDividers="middle">

        <LinearLayout
            android:id="@+id/layout_content_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:showDividers="middle">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/trust_logo" />


            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:paddingTop="16dp"
                android:text="@string/settings_title"
                android:textColor="#000000"
                android:textSize="12sp" />

        </LinearLayout>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="3" />

        <LinearLayout
            android:id="@+id/layout_content_child2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:showDividers="middle">


            <TextView
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/select_input"
                android:textColor="#000000"
                android:textSize="12sp" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="5dp"
                android:layout_weight="2" />

            <LinearLayout
                android:id="@+id/layout_content_switch"
                android:paddingTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:showDividers="middle">

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/change"
                    android:textColor="#000000"
                    android:textSize="12sp" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="45dp"
                    android:layout_height="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:checked="false" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="@string/level"
                    android:textColor="#000000"
                    android:textSize="12sp" />

            </LinearLayout>

            <Space
                android:layout_width="wrap_content"
                android:layout_height="8dp"
                android:layout_weight="2" />


            <LinearLayout
                android:id="@+id/layout_content_child3"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:gravity="center"
                android:paddingBottom="12dp"
                android:paddingTop="10dp"
                android:orientation="horizontal"
                android:showDividers="middle">


                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_button"
                    android:src="@drawable/save"
                    android:onClick="confirm"
                    android:textColor="#000000" />

                <Space
                    android:layout_width="15dp"
                    android:layout_height="8dp"
                    android:layout_weight="" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:background="@drawable/round_button"
                    android:src="@drawable/save"
                    android:onClick="writeExternal"
                    android:textColor="#000000" />

            </LinearLayout>




        </LinearLayout>



    </LinearLayout>
</ScrollView>